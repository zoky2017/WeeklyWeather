<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme.Design.Light" parent="@style/Theme.AppCompat.Light">
        <item name="textColorError">@color/design_textinput_error_color_light</item>
        <item name="colorControlNormal">@color/clear_sky_day_start</item>
        <item name="colorControlActivated">@color/clear_sky_day_start</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ToolbarTitleText" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18.0sp</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="DarkToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
    <style name="HomeCustomButtonStyle">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/home_text_color_dark</item>
        <item name="android:background">@drawable/line_button_bg</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingTop">8.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:paddingBottom">8.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25.0dip</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="home_aqi_item_left_text_style" parent="@style/home_aqi_item_text_style">
        <item name="android:textColor">@color/home_text_color_dark</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="home_aqi_item_right_text_style" parent="@style/home_aqi_item_text_style">
        <item name="android:textColor">@color/home_text_color</item>
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="home_aqi_item_text_style">
        <item name="android:textSize">13.0sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>
